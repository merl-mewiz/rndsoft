<div class="container main-container">
    <% if current_user && current_user.isadmin %>
        <div class="flex">
            <div class="card mb-3">
                <div class="card-body">
                    <a href="<%= edit_news_path(@one_news) %>" class="btn btn-sm btn-info">Редактировать новость</a>
                    <%= link_to 'Удалить новость', @one_news, :method => :delete, :class => 'btn btn-sm btn-danger ml-2', data: { confirm: "Вы действительно хотите удалить новость «#{@one_news.title}»?" } %>
                </div>
            </div>
        </div>
    <% end %>
    <div class="flex-row">
        <div class="card">
            <div class="card-body">
                <h1 class="mb-1"><%= @one_news.title %></h1>
                <p class="mb-4 small text-secondary">Опубликовано: <%= @one_news.created_at.strftime("%d.%m.%Y %H:%M") %></p>
                <p><%= @one_news.body %></p>
            </div>
            <div class="card-footer">
                <a href="<%= news_index_path %>" class="btn btn-sm btn-light">К списку новостей</a>
            </div>
        </div>
    </div>
</div>