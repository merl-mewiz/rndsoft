<div class="container main-container">
    <% if can? :manage, @post %>
        <div class="flex">
            <div class="card mb-3">
                <div class="card-body">
                    <%= link_to 'Редактировать пост', edit_post_path(@post), :class => 'btn btn-sm btn-info ml-2' %>
                    <%= link_to 'Удалить пост', @post, :method => :delete, :class => 'btn btn-sm btn-danger ml-2', data: { confirm: "Вы действительно хотите удалить пост «#{@post.title}»?" } %>
                </div>
            </div>
        </div>
    <% end %>
    <div class="flex-row">
        <div class="card">
            <div class="card-body">
                <h1 class="mb-1"><%= @post.title %></h1>
                <p class="mb-4 small text-secondary">
                    <%= @post.user.username %>,
                    Опубликовано: <%= @post.created_at.strftime("%d.%m.%Y %H:%M") %>
                </p>
                <p><%= @post.body %></p>
            </div>
            <div class="card-footer">
                <%= link_to 'К списку постов', posts_path,  :class => 'btn btn-sm btn-light' %>
            </div>
        </div>
    </div>
</div>