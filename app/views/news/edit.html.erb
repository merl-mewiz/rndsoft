<div class="container main-container">
    <div class="flex-row">
        <h2 class="mb-4">Редактирование «<%= @one_news.title %>»</h2>
        <div class="card">
            <div class="card-body">
                <%= render 'edit_one_news_form' %>
            </div>
            <div class="card-footer">
                <a href="<%= news_path(@one_news) %>" class="btn btn-sm btn-light">Просмотреть новость</a>
                <a href="<%= news_index_path %>" class="btn btn-sm btn-light">К списку новостей</a>
                <%= link_to 'Удалить новость', @one_news, :method => :delete, :class => 'btn btn-sm btn-danger float-right', data: { confirm: "Вы действительно хотите удалить новость «#{@one_news.title}»?" } %>
            </div>
        </div>
    </div>
</div>